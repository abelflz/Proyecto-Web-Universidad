@model Universidad.Models.Estudiante

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Estudiante</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Nombre)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Apellido)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Apellido)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Correo)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Correo)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Fecha_Inscripccion)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Fecha_Inscripccion)
        </dd>
        <dt>
            @Html.Label("Inscripción")
        </dt>
        <dd>
            <table class="table table-striped">
                <tr>
                    <th>
                        @Html.Label("Curso")
                    </th>
                    <th>
                        @Html.Label("Código de Materia")
                    </th>
                    <th>
                        @Html.Label("Calificación")
                    </th>
                    <th>
                        @Html.Label("Cantidad de créditos")
                    </th>
                </tr>
                @foreach(var item in Model.Inscripcion)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(model=> item.Curso.Nombre)
                        </td>
                        <td>
                            @Html.DisplayFor(model => item.CodigoCurso)
                        </td>
                        <td>
                            @Html.DisplayFor(model => item.Nota)
                        </td>
                        <td>
                            @Html.DisplayFor(model => item.Curso.Creditos)
                        </td>
                    </tr>
                }
            </table>
        </dd>
        <dt>
            @Html.Label("Total créditos cursados")
        </dt>
        <dd>
            @ViewBag.Credito
        </dd>
    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Matricula }) |
    @Html.ActionLink("Back to List", "Index")
</p>
